<div class="home-container">
    <div class="header-container">
        <div class="image-container">
            <img id="logo-image" src="/images/logo.png">
        </div>
        <div class="title-container">
            TASOR
        </div>
        <%- include  ('./partials/user-info') %>
    </div>

    <div class="home-content">
        <div class="button-container-add">
            <button class="myButton" id="myButton">+ Create new board</button>
        </div>

        <div id="myModal" class="modal">
            <div class="modal-content">
                <div class="form">
                    <form id="create-board-form" method="POST" action="/home">
                        <div class="modal-title">
                            <span class="title-create">Create new board</span>
                            <span class="closed">&times;</span>
                        </div>
                        <div class="input-container">
                            <span class="label-content">Name</span>
                            <input type="text" name="name" class="input-content-home">
                        </div>

                        <div class="create-button">
                            <button type="submit" class="button-content">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="/javascripts/openmodal.js"></script>
        <div class="boards">
            <div class="boards-container">
                <div class="card-header">
                    <img class="image" src="/images/user.svg">
                    <p>Boards created by you</p>
                </div>
                <div class="card-body" id="board-created">
                    <div id="empty-state-boards">
                        <img class="image-empty" src="/images/img_519534.png">
                        <p class="empty-text">No boards here</p>
                    </div>
                </div>
                <script src="/javascripts/add-board.js"></script>
            </div>

            <div class="boards-container">
                <div class="card-header">
                    <img class="image" src="/images/multy-user.svg">
                    <p>Boards you belong to</p>
                </div>
                <div class="card-body" id="board-belong">
                    <div id="empty-state-boards-belong">
                        <img class="image-empty" src="/images/img_519534.png">
                        <p class="empty-text">No boards here</p>
                    </div>
                    <script src="/javascripts/belong-board.js"></script>
                </div>
            </div>
        </div>
        <%- include  ('./partials/messages') %>
            <script src="/javascripts/errors.js"></script>
    </div>
</div>

<noscript>
    <style type="text/css">
        .home-container {display:none;}
    </style>
