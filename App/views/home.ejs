<div class="home-container">

    <div class="header-container">
        <div class="image-container">
            <img id="logo-image" src="/images/logo.png">
        </div>
        <div class="title-container">
            TASOR
        </div>
        <div class="username-container">
            <%- username %>
        </div>
    </div>

    <div class="home-content">
        <div class="button-container-add">
            <button id="myButton">+ Create new board</button>
        </div>

        <div id="myModal" class="modal">
            <div class="modal-content">
                <div class="form">
                    <form id="create-board-form">
                        <div class="modal-title">
                            <span class="title-create">Create new board</span>
                            <span class="closed">&times;</span>
                        </div>
                        <div class="input-container">
                            <span class="label-content">Name</span>
                            <input type="text" name="name" class="input-content-home">
                        </div>

                        <div class="create-button">
                            <button type="submit" class="button-content">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="/javascripts/openmodal.js"></script>
        <div class="boards">
            <div class="boards-container">
                <div class="card-header">
                    <img class="image" src="/images/user.svg">
                    <p>Boards created by you</p>
                </div>
                <div class="card-body">
                    <div class="empty-state">
                        <img class="image-empty" src="/images/EmptyState.png">
                    </div>
                </div>
            </div>

            <div class="boards-container">
                <div class="card-header">
                    <img class="image" src="/images/multy-user.svg">
                    <p>Boards you belong to</p>
                </div>
                <div class="card-body">
                    <div class="empty-state">
                        <img class="image-empty-belong" src="/images/img_519534.png">
                    </div>
                </div>
            </div>
        </div>

    </div>